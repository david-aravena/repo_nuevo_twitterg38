<div style="width:50vw; height: 75vh; margin: 2rem 0 0 2rem">
    <%# //////////////imagen costado (al azar)//////////////////// %>
    <div id ="fotos" style="background-image: url(<%= @images[0].url %>); width: 100%; height: 100%; background-size: cover; background-position: center">
    </div>
    
</div>
<div class="contenedor">
    <div>
        <h3 style="color: #3B3B3B; font-family: 'Roboto', bold;">Iniciar Sesion</h3>
        <hr>
    </div>
    <%= form_with(url: sc_path, model: @user, local: true) do |j| %>
        <div class="mb-3">
            <%= j.label :email, class:"texto-input" %>
            <%= j.email_field :email, class: 'form-control' %> 
        </div>
        <div class="mb-3">
            <%= j.label :password, class:"texto-input" %>
            <%= j.text_field :password, type: "password", class: 'form-control' %> 
        </div>
        <div><%= j.submit "Entrar", class: "btn btn-info"%> </div>
    <% end %>
    <div>
        <% flash.each do |key, value| %>
            <p style="color:red;" class="mt-3"> <%= value %> </p>
        <% end %>
    </div>
</div>